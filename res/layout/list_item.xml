<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/appicon"
    android:layout_marginTop="35dp"
    android:layout_marginBottom="35dp" >

     <TextView
         android:id="@+id/app_list_item_id"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/app_list_item_title"
         android:layout_alignParentRight="true"
         android:textSize="14sp"
         android:text="id" />

     <TextView
         android:id="@+id/app_list_item_rating"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/app_list_item_id"
         android:textSize="20sp"
         android:text="rating" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/app_list_item_rating"
         android:layout_alignBottom="@+id/app_list_item_rating"
         android:layout_toLeftOf="@+id/app_list_item_rating"
         android:text="Rating: " />

     <TextView
         android:id="@+id/textView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/app_list_item_title"
         android:layout_alignBottom="@+id/app_list_item_title"
         android:layout_alignParentLeft="true"
         android:text="Title: " />

     <TextView
         android:id="@+id/app_list_item_title"
         android:layout_width="160sp"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_toRightOf="@+id/textView3"
         android:text="title"
         android:textSize="19sp" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/app_list_item_id"
         android:layout_alignBottom="@+id/app_list_item_id"
         android:layout_marginRight="14dp"
         android:layout_toLeftOf="@+id/textView1"
         android:text="Id: " />

</RelativeLayout>